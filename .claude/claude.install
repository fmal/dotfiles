#!/usr/bin/env zsh

if ! command -v claude &> /dev/null; then
  echo "Claude Code not installed: skipping global config setup."
  exit 0
fi

claude config set -g theme dark 2>/dev/null
claude config set -g preferredNotifChannel terminal_bell 2>/dev/null
claude config set -g autoConnectIde true 2>/dev/null
claude config set -g diffTool auto 2>/dev/null

claude migrate-installer
